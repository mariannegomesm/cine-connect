<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cine_connect.ui.screens.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="100dp">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/perfil" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/NomeTextField"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:text="Sofia Almeida"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/userDescribeTextField"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="5dp"
            android:text="Sofialmeida@unifor.com"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/topic_description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:hint="Sou Sofia Almeida, tenho 23 anos e sou engenheira de software. Minha paixão pelo desenvolvimento de aplicativos móveis me motiva todos os dias a buscar novos desafios. Além de trabalhar na área de tecnologia, sou uma grande fã de filmes, especialmente ficção científica e animação, sempre estou em busca de novas histórias para me inspirar."
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical"

                >

                <Button
                    android:id="@+id/update_profile"
                    android:layout_width="180dp"
                    android:layout_height="38dp"
                    android:background="@drawable/rounded_button_background"
                    android:text="Atualizar Perfil"
                    android:textSize="10dp"
                    app:icon="@drawable/plus_svgrepo_com__7_" />

            </LinearLayout>

            <TextView
                android:id="@+id/filmescartazedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="10dp"
                android:text="Filmes Favotitos"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/div1"
                        android:layout_width="140dp"
                        android:layout_height="210dp"
                        android:layout_marginEnd="16dp"
                        android:background="#f2f3f6"
                        android:clickable="true"
                        android:contentDescription="Filme em cartaz"
                        android:focusable="true" />

                    <ImageView
                        android:id="@+id/div2"
                        android:layout_width="140dp"
                        android:layout_height="210dp"
                        android:layout_marginEnd="16dp"
                        android:background="#f2f3f6"
                        android:clickable="true"
                        android:contentDescription="Filme em cartaz"
                        android:focusable="true" />

                    <ImageView
                        android:id="@+id/div3"
                        android:layout_width="140dp"
                        android:layout_height="210dp"
                        android:background="#f2f3f6"
                        android:clickable="true"
                        android:contentDescription="Filme em cartaz"
                        android:focusable="true" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <TextView
            android:id="@+id/topics_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="50dp"
            android:text="Gêneros Favoritos"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- FragmentContainerView (já existente) -->
                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragmentContainerView"
                    android:name="com.example.cine_connect.ui.screens.profile.ProfileFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Terror"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ficção"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Comédia"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Romance"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_marginStart="8dp"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                        <TextView
                            android:id="@+id/topics_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="10dp"
                            android:text="Topicos participantes"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/commentText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ótima produção, um dos melhores filmes que vi este ano"
                            android:textSize="17sp"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marina"
                            android:textSize="15sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:id="@+id/commentText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Muito bom, mas o final poderia ser melhor."
                            android:textSize="17sp"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marcos"
                            android:textSize="15sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginTop="8dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


