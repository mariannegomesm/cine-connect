<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cine_connect.ui.screens.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- CardView para a Imagem de Perfil -->
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="75dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/NomeTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#54473F"
            android:enabled="false"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:gravity="center"
            android:background="@android:drawable/editbox_background" />

        <EditText
            android:id="@+id/EmailTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="sophiacastro876@gmail.com"
            android:enabled="false"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="#54473F"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/editbox_background" />

        <EditText
            android:id="@+id/BirthdateTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="14/05/1995"
            android:enabled="false"
            android:gravity="center"
            android:textColor="#54473F"
            android:inputType="date"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:background="@android:drawable/editbox_background" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="8dp"
            app:cardElevation="2dp">

            <EditText
                android:id="@+id/userDescribeTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#54473F"
                android:enabled="false"
                android:textSize="12sp"
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:background="@android:drawable/editbox_background" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/update_profile"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button_background"
            android:text="Atualizar Perfil"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/favoritesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meus Favoritos"
            android:textSize="18sp"
            android:padding="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favoritesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/topics_title5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="30dp"
            android:text="Gêneros Favoritos"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="4"
            android:layout_marginHorizontal="32dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Terror"
                android:gravity="center"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginStart="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ficção"
                android:gravity="center"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginStart="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comédia"
                android:gravity="center"
                android:padding="7dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginStart="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Romance"
                android:gravity="center"
                android:padding="6dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginStart="6dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
