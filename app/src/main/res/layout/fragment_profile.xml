<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cine_connect.ui.screens.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="100dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/perfil" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/NomeTextField"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:text="Sofia Almeida"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/userDescribeTextField"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="5dp"
        android:text="Sofialmeida@unifor.com"
        android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/topic_description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:hint="Sou Sofia Almeida, tenho 23 anos e sou engenheira de software. Minha paixão pelo desenvolvimento de aplicativos móveis me motiva todos os dias a buscar novos desafios. Além de trabalhar na área de tecnologia, sou uma grande fã de filmes, especialmente ficção científica e animação, sempre estou em busca de novas histórias para me inspirar."
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical"

                >

                <Button
                    android:id="@+id/update_profile"
                    android:layout_width="180dp"
                    android:layout_height="38dp"
                    android:background="@drawable/rounded_button_background"
                    android:text="Atualizar Perfil"
                    android:textSize="10dp"
                    app:icon="@drawable/plus_svgrepo_com__7_" />

            </LinearLayout>

            <TextView
                android:id="@+id/filmescartazedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="10dp"
                android:text="Filmes Favotitos"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/div1"
                    android:layout_width="140dp"
                    android:layout_height="210dp"
                    android:layout_marginEnd="16dp"
                    android:background="#f2f3f6"
                    android:clickable="true"
                    android:contentDescription="Filme em cartaz"
                    android:focusable="true" />

                <ImageView
                    android:id="@+id/div2"
                    android:layout_width="140dp"
                    android:layout_height="210dp"
                    android:layout_marginEnd="16dp"
                    android:background="#f2f3f6"
                    android:clickable="true"
                    android:contentDescription="Filme em cartaz"
                    android:focusable="true" />

                <ImageView
                    android:id="@+id/div3"
                    android:layout_width="140dp"
                    android:layout_height="210dp"
                    android:background="#f2f3f6"
                    android:clickable="true"
                    android:contentDescription="Filme em cartaz"
                    android:focusable="true" />
            </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>


