<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:orientation="vertical">

    <!-- Card layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_background"
        android:orientation="horizontal"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true">

        <!-- Div ao redor da parte cinza -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp">

            <!-- Ícone na esquerda (parte cinza) -->
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:layout_marginRight="12dp"
                android:background="@drawable/rounded_background"
                android:gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="Ícone de mensagem"
                    android:src="@drawable/ic_file"
                    app:tint="#949494" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/topic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingTop="4dp"
                android:text="O filme não é tão ruim"
                android:textColor="#626262"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/topic_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry..."
                android:textColor="#888888"
                android:textSize="12sp" />

            <!-- Usuário que criou o tópico -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingTop="4dp"
                android:text="Criado por: @mariannegomesm"
                android:textColor="#626262"
                android:textSize="12sp" />

            <!-- Quantidade de comentários -->
            <TextView
                android:id="@+id/topic_comments_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Comentários: 5"
                android:textColor="#626262"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Contêiner com borda amarela -->
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="#F2F3F6"
            android:gravity="center">

            <ImageButton
                android:id="@+id/button_delete_topic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Excluir tópico"
                android:src="@drawable/ic_trash" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
