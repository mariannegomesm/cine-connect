<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="32dp"
    android:layout_marginTop="50dp"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/topic_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Título do Tópico"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/profile_icon1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/user_circle"
                    android:contentDescription="usericon"
                    android:layout_marginStart="8dp"/>

                <ImageView
                    android:id="@+id/profile_icon2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/user_circle"
                    android:contentDescription="usericon"
                    android:layout_marginStart="4dp"/>

                <ImageView
                    android:id="@+id/profile_icon3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/user_circle"
                    android:contentDescription="usericon"
                    android:layout_marginStart="4dp"/>

                <TextView
                    android:id="@+id/topic_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="+4"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/topic_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esta é uma breve descrição do tópico."
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <!-- Adicionando contagem de mensagens e participantes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/mensages_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="1002 mensagens"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/participant_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 participantes"
                android:textStyle="italic"
                android:layout_marginEnd="2dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
