<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".ui.home.HomeFragment">

    <View
        android:id="@+id/div_verde"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@android:color/holo_green_light"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/text_filmes_em_cartaz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/div_amarela"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintWidth_percent="0.33" />

    <View
        android:id="@+id/div_amarela"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@android:color/holo_orange_light"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/text_filmes_em_cartaz"
        app:layout_constraintStart_toEndOf="@id/div_verde"
        app:layout_constraintEnd_toStartOf="@+id/div_vermelha"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintWidth_percent="0.33" />

    <View
        android:id="@+id/div_vermelha"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@android:color/holo_red_light"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/text_filmes_em_cartaz"
        app:layout_constraintStart_toEndOf="@id/div_amarela"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"
        app:layout_constraintWidth_percent="0.33" />

    <TextView
        android:id="@+id/text_filmes_populares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Filmes Populares"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/div_vermelha" />

    <TextView
        android:id="@+id/text_filmes_em_cartaz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Filmes em cartaz"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.004"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/div_popular_verde"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintTop_toBottomOf="@id/text_filmes_populares"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/div_popular_amarela"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintWidth_percent="0.33" />

    <View
        android:id="@+id/div_popular_amarela"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@android:color/holo_purple"
        app:layout_constraintTop_toBottomOf="@id/text_filmes_populares"
        app:layout_constraintStart_toEndOf="@id/div_popular_verde"
        app:layout_constraintEnd_toStartOf="@+id/div_popular_vermelha"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintWidth_percent="0.33" />

    <View
        android:id="@+id/div_popular_vermelha"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@android:color/holo_blue_dark"
        app:layout_constraintTop_toBottomOf="@id/text_filmes_populares"
        app:layout_constraintStart_toEndOf="@id/div_popular_amarela"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"
        app:layout_constraintWidth_percent="0.33" />

</androidx.constraintlayout.widget.ConstraintLayout>
