<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="ui.screens.rate.RateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background='#8E0000'
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="32dp"
        android:paddingTop="8dp"
        android:paddingRight="32dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/titlefilmecreatereview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Venom"
            android:textColor="#ffffff"
            android:textColorLink="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_venom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text=">"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_all_topics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avaliar filme"
            android:textColor="#ffffff"
            android:textColorLink="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />

           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

              <ImageView
                android:id="@+id/imageView6"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/stat_notify_chat"
                android:tint="#a80000" />

               <TextView
                   android:id="@+id/title"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Avaliar filme"
                   android:textSize="24sp"
                   android:textStyle="bold" />
        </LinearLayout>

	<TextView
		android:id="@+id/description"
		android:layout_width="353dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="32dp"
		android:layout_marginLeft="32dp"
		android:layout_marginTop="8dp"
		android:layout_marginRight="32dp"
		android:text="O que você achou do filme selecionado? Compartilhe com os demais usuários, preenchendo o formulário abaixo."
		android:textSize="14sp" />


    <TextView
        android:id="@+id/timestamp"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="8dp"
        android:text=""
        android:textSize="14sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/topicDescriptionTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:hint="Descreva sua experiência aqui"
            app:boxStrokeColor="#a30000"
            app:cursorColor="#a30000"
            app:hintTextColor="#a30000">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/topic_coment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#f2f3f6"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:minLines="8"
            android:scrollbars="vertical"
            android:singleLine="false" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/description2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:text="Insira sua nota:"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="24dp"
        android:numStars="5"
        android:rating="0"
        android:stepSize="0.5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_rating"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Postar avaliação"
        android:layout_marginHorizontal="32dp"
        android:backgroundTint="#A30000"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"/>

</LinearLayout>
