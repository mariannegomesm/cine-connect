<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/greenDiv"
                android:layout_width="225dp"
                android:layout_height="303dp"
                android:background="@android:color/holo_green_light"
                app:layout_constraintBottom_toTopOf="@+id/titleText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.179" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Título do filme"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/greenDiv" />

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="409dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleText" />

            <View
                android:id="@+id/membersDiv"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/holo_blue_light"
                app:layout_constraintEnd_toStartOf="@+id/reviewsDiv"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionText" />

            <View
                android:id="@+id/reviewsDiv"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/holo_orange_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/membersDiv"
                app:layout_constraintTop_toBottomOf="@+id/descriptionText" />

            <TextView
                android:id="@+id/membersText"
                android:layout_width="198dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="Membros"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/membersDiv"
                app:layout_constraintEnd_toEndOf="@+id/membersDiv"
                app:layout_constraintHorizontal_bias="0.136"
                app:layout_constraintStart_toStartOf="@+id/membersDiv"
                app:layout_constraintTop_toTopOf="@+id/membersDiv"
                app:layout_constraintVertical_bias="0.307" />

            <TextView
                android:id="@+id/membersText2"
                android:layout_width="178dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="30"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/membersDiv"
                app:layout_constraintEnd_toEndOf="@+id/membersDiv"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/membersDiv"
                app:layout_constraintTop_toTopOf="@+id/membersDiv"
                app:layout_constraintVertical_bias="0.692" />

            <TextView
                android:id="@+id/reviewsText"
                android:layout_width="197dp"
                android:layout_height="23dp"
                android:gravity="center"
                android:text="Reviews"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/reviewsDiv"
                app:layout_constraintEnd_toEndOf="@+id/reviewsDiv"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/reviewsDiv"
                app:layout_constraintTop_toTopOf="@+id/reviewsDiv"
                app:layout_constraintVertical_bias="0.307" />

            <TextView
                android:id="@+id/reviewsText2"
                android:layout_width="178dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="15"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/reviewsDiv"
                app:layout_constraintEnd_toEndOf="@+id/reviewsDiv"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/reviewsDiv"
                app:layout_constraintTop_toTopOf="@+id/reviewsDiv"
                app:layout_constraintVertical_bias="0.692" />

            <TextView
                android:id="@+id/topicsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Tópicos"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reviewsDiv" />

            <androidx.cardview.widget.CardView
                android:id="@+id/topic1Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topicsTitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/topic1Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marianne Gomes"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/topic1Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/topic2Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topic1Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/topic2Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pedro Lucas Mendonça"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/topic2Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/viewAllTopicsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Ver todos os tópicos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topic2Card" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>
