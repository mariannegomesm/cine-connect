<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.topiccreate.TopicCreateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/div1"
                android:layout_width="300dp"
                android:layout_height="450dp"
                android:layout_marginTop="68dp"
                android:layout_marginHorizontal="60dp"
                android:background="#F2E7C9"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Divisão de cartaz"/>

            <TextView
                android:id="@+id/titlemovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título do Filme"
                android:textAlignment="center"
                android:layout_marginHorizontal="120dp"
                android:textStyle="bold"
                android:layout_marginTop="36dp"
                android:textSize="24sp"
                android:contentDescription="Titulo do Filme"/>
        </LinearLayout>

        <TextView
            android:id="@+id/title_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título do seu tópico:"
            android:layout_marginHorizontal="32dp"
            android:textStyle="bold"
            android:layout_marginTop="36dp"
            android:textSize="20sp"
            android:contentDescription="Titulo do Tópico"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="true"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/topic_title_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Digite o titulo do seu tópico aqui"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/title_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descreva seu tópico:"
            android:layout_marginHorizontal="32dp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:textSize="20sp"
            android:contentDescription="Titulo do Tópico"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="true"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/topic_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Digite o titulo do seu tópico aqui"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_topic"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Postar Tópico"
            android:layout_marginHorizontal="32dp"
            android:backgroundTint="#7678ed"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="50dp"/>
    </LinearLayout>
</ScrollView>
