<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.listreviews.ListReviewsFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/user_circle"
                    android:contentDescription="Ícone de usuário"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/review_creator1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/@pedro"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="4.0"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <TextView
                android:id="@+id/review_description1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esta é uma breve descrição do review."
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
